<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Tematicas
        </div>

        <div class="table-responsive">
            <table class="table table-striped b-t b-light">
                <thead>
                    <tr>

                        <th>Nombre </th>
                        <th>Tipo </th>
                        <th>Accion </th>



                    </tr>
                </thead>
                <tbody>


                    {{#each tematicas}}

                    <tr>
                        <td>{{nombre}}</td>
                        <td>{{tipo}}</td>

                        {{/each}}


                        <td>
                            <div id="actionsContainer">
                                <div id="actiosItems">
                                   
                                    <span id="span2"><a class="nav-link" href="#" onclick="eliminar({{id}})">
                                            <i class="fa fa-trash"></i>
                                        </a></span>
                                </div>
                            </div>
                        </td>


                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>

<script>

 

    function eliminar(id) {
        fetch(`/listarT/${id}`, {
            method: 'DELETE'
        }).then(result => {
            console.log(result);
            location.reload();
        }).catch(err => {
            console.log(err);
        })
    }

</script>